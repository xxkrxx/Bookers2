<h2>Book detail</h2>
  <table class='table'>
  <tr>
  <td>
  <div>
  <%= link_to  user_path(@book.user.id) do %>
  <%= image_tag @user.get_profile_image(100,100) %><br>
　<% end %>  
  <%= link_to @user.name, user_path(@user.id) %>
  </td>
  <td><%= link_to @book.title, book_path(@book.id) %></td>
  <td><%= @book.body %></td>
  <td>
  <% if @book.user == current_user %>  
  <%= link_to  edit_book_path(@book.id),class: 'btn btn-sm btn-success edit_book_106285' do %>
  Edit
  <% end %>
  </td>
  <td>
   <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm"=>"本当に消しますか？",class: "btn btn-sm btn-danger destroy_book_106285" %>
   </td>
  <% end %>
  </tr>
  </table>




